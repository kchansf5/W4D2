<form action="<%= cats_url %>" method="post">
  <label for="name">
    Name:
    <input type="text" name="cat[name]">
  </label>

  <label for="color">
    Color:
    <select name="cat[color]">
      <option disabled selected>-- What's your cat's color? --</option>
      <option value="black">black</option>
      <option value="orange">orange</option>
      <option value="white">white</option>
      <option value="yellow">yellow</option>


    </select>
  </label>

  <label for="birth_date">
    Birth Date:
    <input type="date" name="cat[birth_date]">
  </label>

  <label for="sex">
    Sex:
    <label>M<input type="radio" name="cat[sex]" value = "M"></label>
    <label>F<input type="radio" name="cat[sex]" value = "F"></label>
  </label>


  <label for="description">
    Description:
    <textarea name="cat[description]"></textarea>
  </label>

  <input type="submit" value="Add your cat!">
</form>
